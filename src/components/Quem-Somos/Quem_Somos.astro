  { name: 'Digital.Ao Huambo', logo: '../src/assets/logos/digital.png', href: 'https://digital.ao/ao/' },
  { name: 'Try-Code', logo: '../src/assets/logos/try-code-logo.png', href: 'https://trycode-angola.com/' },
